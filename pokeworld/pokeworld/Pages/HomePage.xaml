<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pokeworld.Pages.HomePage"
             Shell.NavBarIsVisible="False">
    <ContentPage.Content>
        <FlexLayout 
            AlignItems="Center"
            Direction="Column"
            JustifyContent="SpaceEvenly">
            
            <Image 
                Source="pokeworld.png"/>

            <Label 
                FontAttributes="Bold"
                FontSize="Title"
                Text="Bienvenue sur PokeWorld !"/>

            <Frame
                BorderColor="Black"
                CornerRadius="18"
                WidthRequest="300">
                <Label
                    FontSize="Large"
                    HorizontalOptions="CenterAndExpand" 
                    HorizontalTextAlignment="Center"
                    Text="Ici, vous pouvez consulter une grande liste de pokémon, ainsi que la possibilité d'ajouter vos propres pokémons personnalisés !" />
            </Frame>
            
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>