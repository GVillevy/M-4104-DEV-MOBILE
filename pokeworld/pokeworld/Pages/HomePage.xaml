<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pokeworld.Pages.HomePage"
             Shell.NavBarIsVisible="False">

    <FlexLayout Direction="Column"
                AlignItems="Center"
                JustifyContent="SpaceEvenly">

        <Image 
            Source="pokeworld.png"/>

        <Label Text="Bienvenue sur PokeWorld !"
               FontSize="Title"
               FontAttributes="Bold"/>

        <Frame
            CornerRadius="18"
            BorderColor="Black"
            WidthRequest="300">
            <Label 
                HorizontalTextAlignment="Center"
                HorizontalOptions="CenterAndExpand" 
                FontSize="Large"
                Text="Ici, vous pouvez consulter une grande liste de pokémon, ainsi que la possibilité d'ajouter vos propres pokémons personnalisés !" />
        </Frame>

    </FlexLayout>
</ContentPage>