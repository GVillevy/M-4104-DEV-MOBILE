<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pokeworld.Pages.AddPage">

    <StackLayout>
        <Image Source="ajout.png"
                       x:Name="selectionImage"
                       WidthRequest="150"
                       BackgroundColor="White">
            <Image.GestureRecognizers>
                <TapGestureRecognizer
                            Tapped="Handle_Clicked"
                            NumberOfTapsRequired="1" />
            </Image.GestureRecognizers>
        </Image>
        
        <Entry x:Name="nomPokemon"  Placeholder="Nom"/>
        <Entry x:Name="type1Pokemon"  Placeholder="Type1"/>
        <Entry x:Name="type2Pokemon"  Placeholder="Type2"/>
        <Entry x:Name="heightPokemon"  Placeholder="Hauteur"/>
        <Entry x:Name="weightPokemon"  Placeholder="Poids"/>
        <Button x:Name="newButton" Text="Ajouter pokémon" Clicked="OnNewButtonClicked"></Button>
    </StackLayout>
   
</ContentPage> 